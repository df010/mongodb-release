# mongod.conf


# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/


# Where and how to store data.
storage:
  dbPath: /var/vcap/store/mongo-config/data
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:


# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/vcap/sys/log/mongo-config/log.log

# network interfaces
net:
  port: 20000
  bindIp: 0.0.0.0


processManagement:
  fork: true
  pidFilePath: /var/vcap/sys/run/mongo-config/mongodb.pid

#-security:
#-  authorization: enabled
#-  keyFile: /var/vcap/store/mongo-config/mongodb-keyfile


#-replication:
#-  replSetName: config


sharding:
  clusterRole: configsvr

